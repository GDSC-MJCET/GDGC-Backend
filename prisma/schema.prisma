generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Application {
  id            String   @id @default(cuid())
  
  // Personal Information
  name     String
  rollNo   String
  phoneNo  String
  branch   String
  year     String
  resume   String
  email    String
  // Professional Links
  linkedin     String
  github       String
  previousWork String
  
  // Portfolio Preferences
  selectedPortfolios String[] // Array of selected portfolios
  portfolio1         String?
  portfolio2         String?
  
  // Submission Information
  submittedAt DateTime @default(now())
  status      Status   @default(PENDING)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("applications")
}

enum Status {
  PENDING
  APPROVED
  REJECTED
  UNDER_REVIEW
  
  @@map("application_status")
}
